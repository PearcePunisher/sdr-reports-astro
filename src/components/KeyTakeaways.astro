---
interface Takeaway {
  title: string;
  content: string;
}

interface Props {
  heading?: string;
  takeaways: Takeaway[];
}

const { heading = 'Key Takeaways', takeaways = [] } = Astro.props;
---

<section class="bg-[#0f1f3a]/50 border border-white/10 rounded-2xl p-6 lg:p-8">
  <h2 class="text-2xl font-bold text-white mb-6">{heading}</h2>
  <div class="grid gap-4 sm:grid-cols-2">
    {takeaways.map((item) => (
      <div class="bg-[#0a1628]/70 border border-white/5 rounded-xl p-4">
        <h3 class="text-lg font-semibold text-white mb-2">{item.title}</h3>
        <p class="text-sm text-slate-300 leading-relaxed">{item.content}</p>
      </div>
    ))}
  </div>
</section>
