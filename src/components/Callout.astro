---
interface Props {
  title?: string;
  variant?: 'info' | 'success' | 'warning';
}

const { title, variant = 'info' } = Astro.props;

const variants = {
  info: 'bg-brand-900/30 border-brand/30',
  success: 'bg-emerald-950/50 border-emerald-500/30',
  warning: 'bg-amber-950/50 border-amber-500/30',
};
---

<div class={`border rounded-2xl p-6 my-6 ${variants[variant]}`}>
  {title && (
    <h3 class="text-lg font-semibold mb-3 text-white">
      {title}
    </h3>
  )}
  <div class="text-slate-300 space-y-3">
    <slot />
  </div>
</div>
