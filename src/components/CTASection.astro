---
interface Props {
  heading: string;
  description?: string;
  buttonText: string;
  buttonUrl?: string;
  variant?: 'primary' | 'secondary' | 'outline';
}

const { heading, description, buttonText, buttonUrl = '#', variant = 'primary' } = Astro.props;

const variants = {
  primary: {
    wrapper: 'bg-gradient-to-br from-brand-900/40 to-brand/10 border border-brand/40',
    button: 'bg-brand text-black hover:bg-brand-600',
  },
  secondary: {
    wrapper: 'bg-[#0f1f3a]/60 border border-white/10',
    button: 'bg-white text-slate-900 hover:bg-slate-100',
  },
  outline: {
    wrapper: 'bg-[#0a1628]/60 border border-brand/40',
    button: 'border border-brand text-brand hover:bg-brand hover:text-black',
  },
};
---

<section class={`rounded-2xl p-8 my-8 ${variants[variant].wrapper}`}>
  <div class="space-y-3">
    <h3 class="text-2xl font-bold text-white">{heading}</h3>
    {description && <p class="text-slate-300">{description}</p>}
    <div>
      <a
        href={buttonUrl}
        class={`inline-flex items-center px-5 py-3 rounded-lg font-semibold transition-colors ${variants[variant].button}`}
      >
        {buttonText}
      </a>
    </div>
  </div>
</section>
