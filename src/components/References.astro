---
interface Reference {
  id: string;
  text: string;
  url?: string;
}

interface Props {
  references: Reference[];
}

const { references } = Astro.props;
---

<section id="references" class="scroll-mt-24 mb-16">
  <h2 class="text-3xl font-bold mb-6 text-white">References</h2>
  <ol class="space-y-3 text-sm text-slate-300">
    {references.map((ref) => (
      <li id={ref.id} class="scroll-mt-24">
        <span class="text-brand">[{ref.id.replace('ref-', '')}]</span>{' '}
        {ref.url ? (
          <a href={ref.url} class="underline decoration-dotted underline-offset-4 hover:text-brand">
            {ref.text}
          </a>
        ) : (
          ref.text
        )}
      </li>
    ))}
  </ol>
</section>
