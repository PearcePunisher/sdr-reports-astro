---
// ./src/components/PortableText.astro
import { PortableText as PortableTextInternal } from 'astro-portabletext'
import PortableTextImage from "./PortableTextImage.astro";

const { portableText } = Astro.props;

---

<div class="prose prose-invert max-w-none prose-headings:text-white prose-p:text-slate-300 prose-strong:text-white prose-a:text-brand prose-a:no-underline prose-a:underline-offset-4 prose-a:decoration-dotted">
  <PortableTextInternal
    value={portableText}
    components={{
      type: { image: PortableTextImage },
    }}
  />
</div>
