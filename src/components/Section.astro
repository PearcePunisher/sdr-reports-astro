---
interface Props {
  id: string;
  title: string;
  level?: 2 | 3;
}

const { id, title, level = 2 } = Astro.props;
const Tag = `h${level}` as any;
---

<section id={id} class="scroll-mt-24 mb-16">
  <Tag class={level === 2 ? "text-3xl font-bold mb-6 text-white" : "text-2xl font-bold mb-4 text-white"}>
    {title}
  </Tag>
  <div class="space-y-6">
    <slot />
  </div>
</section>
