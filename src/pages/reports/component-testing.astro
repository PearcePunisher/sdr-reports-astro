          </div>
        </Section>

        <!-- References -->
        <References references={references} />

        <!-- Back to Top -->
        <div class="text-center pt-8 border-t border-white/10">
          <a
            href="#main-content"
            class="inline-flex items-center text-brand hover:text-brand-400 font-semibold transition-colors">
            <svg
              class="w-5 h-5 mr-2"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24">
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M5 10l7-7m0 0l7 7m-7-7v18"></path>
            </svg>
